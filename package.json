{
  "name": "vue-router-mock",
  "version": "0.1.0",
  "description": "Easily test your components by mocking the router",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "author": {
    "name": "Eduardo San Martin Morote",
    "email": "posva13@gmail.com"
  },
  "scripts": {
    "build": "unbuild",
    "build:dts": "tail -n +2 src/globalExtensions.ts >> dist/index.d.ts",
    "release": "bash scripts/release.sh",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "size": "size-limit",
    "lint": "prettier -c --parser typescript \"{src,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "lint:fix": "yarn run lint --write",
    "test:types": "tsc --build tsconfig.json",
    "test:unit": "jest --coverage",
    "test": "yarn run test:types && yarn run test:unit && yarn run build && yarn run build:dts"
  },
  "files": [
    "dist/*.cjs",
    "dist/*.mjs",
    "dist/*.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "vue",
    "router",
    "mock",
    "spy",
    "stub",
    "jest",
    "test",
    "vue-router"
  ],
  "license": "MIT",
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.2.0",
    "@types/jest": "^27.0.3",
    "@types/jsdom": "^16.2.13",
    "@vue/test-utils": "^2.0.0-rc.17",
    "conventional-changelog-cli": "^2.1.1",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.1",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2",
    "unbuild": "^0.5.13",
    "vue": "^3.2.22",
    "vue-router": "^4.0.12",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "size-limit": [
    {
      "path": "size-checks/basic.js",
      "ignore": [
        "vue",
        "@vue/test-utils"
      ]
    }
  ],
  "peerDependencies": {
    "vue": "^3.2.22",
    "vue-router": "^4.0.12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posva/vue-router-mock.git"
  },
  "bugs": {
    "url": "https://github.com/posva/vue-router-mock/issues"
  },
  "homepage": "https://github.com/posva/vue-router-mock#readme"
}
